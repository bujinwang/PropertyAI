# Docker Environment Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://propertyai:password@postgres:5432/propertyai
DB_USER=propertyai
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-in-production

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket

# Google Maps API (optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Twilio Configuration (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# SendGrid Configuration (optional)
SENDGRID_API_KEY=your-sendgrid-api-key

# Plaid Configuration (optional)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_PATH=/app/uploads

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,http://localhost:3003,http://localhost:8081,exp://localhost:19000,http://localhost:19006

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Feature Flags
ENABLE_REDIS=true
ENABLE_WEBSOCKET=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_REAL_TIME_ANALYTICS=true

# Performance
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=60000
REQUEST_TIMEOUT=30000

# Security
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Queue Configuration
QUEUE_MAX_CONCURRENCY=5
QUEUE_MAX_TIMEOUT=30000
