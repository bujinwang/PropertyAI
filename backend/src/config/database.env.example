# PostgreSQL Connection Parameters
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/propertyai
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=propertyai
PG_USER=postgres
PG_PASSWORD=postgres
PG_SSL=false
PG_SSL_REJECT_UNAUTHORIZED=true

# PostgreSQL Connection Pool Settings
PG_CONNECTION_TIMEOUT=10000
PG_STATEMENT_TIMEOUT=30000
PG_IDLE_TIMEOUT=30000
PG_POOL_MIN=2
PG_POOL_MAX=10
PG_POOL_ACQUIRE=60000
PG_POOL_IDLE=10000

# Prisma Settings
PRISMA_LOG_LEVEL=error
PRISMA_LOG_QUERIES=false
PRISMA_SLOW_QUERY_MS=1000

# PostgreSQL Security Settings
PG_ENCRYPTION_ENABLED=false
PG_ENCRYPTION_KEY=
PG_DATA_AT_REST_ENCRYPTION=false
PG_AUDIT_LOGGING=false
PG_IP_WHITELIST=127.0.0.1,::1

# Database Role Passwords (for initialization only)
PG_ADMIN_PASSWORD=admin_password
PG_APP_PASSWORD=app_password
PG_READONLY_PASSWORD=readonly_password

# Backup Configuration
PG_BACKUP_ENABLED=false
PG_BACKUP_SCHEDULE=0 0 * * *
PG_BACKUP_RETENTION_DAYS=30
PG_BACKUP_STORAGE=s3://propertyai-backups/postgres
PG_BACKUP_COMPRESSION=true
PG_BACKUP_ENCRYPTION=false

# Performance Monitoring
PG_MONITORING_ENABLED=false
PG_SLOW_QUERY_MS=1000
PG_QUERY_STATS_RETENTION_DAYS=7
PG_ALERTING_ENABLED=false

# MongoDB Connection Parameters
MONGODB_URI=mongodb://localhost:27017/propertyai
MONGODB_DB_NAME=propertyai
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin

# MongoDB Connection Options
MONGODB_SERVER_SELECTION_TIMEOUT=30000
MONGODB_CONNECT_TIMEOUT=10000
MONGODB_SOCKET_TIMEOUT=45000
MONGODB_SSL=false
MONGODB_SSL_VALIDATE=true
MONGODB_SSL_CA=
MONGODB_SSL_CERT=
MONGODB_SSL_KEY=

# MongoDB Replica Set Configuration
MONGODB_REPLICA_SET=
MONGODB_READ_PREFERENCE=primary
MONGODB_WRITE_CONCERN=majority
MONGODB_WRITE_TIMEOUT=5000

# MongoDB Connection Pool Settings
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=50
MONGODB_MAX_IDLE_TIME=30000

# MongoDB Security Settings
MONGODB_ENCRYPTION_ENABLED=false
MONGODB_CLIENT_ENCRYPTION=false
MONGODB_ENCRYPTION_KEY_FILE=./mongodb-keyfile
MONGODB_AUDIT_LOG=false
MONGODB_IP_WHITELIST=127.0.0.1,::1

# MongoDB Role Credentials (for initialization only)
MONGODB_ADMIN_USER=propertyai_admin
MONGODB_ADMIN_PASSWORD=admin_password
MONGODB_APP_USER=propertyai_app
MONGODB_APP_PASSWORD=app_password
MONGODB_READONLY_USER=propertyai_readonly
MONGODB_READONLY_PASSWORD=readonly_password

# MongoDB Backup Configuration
MONGODB_BACKUP_ENABLED=false
MONGODB_BACKUP_SCHEDULE=0 0 * * *
MONGODB_BACKUP_RETENTION_DAYS=30
MONGODB_BACKUP_STORAGE=s3://propertyai-backups/mongodb
MONGODB_BACKUP_COMPRESSION=true
MONGODB_BACKUP_ENCRYPTION=false

# MongoDB Monitoring
MONGODB_MONITORING_ENABLED=false
MONGODB_SLOW_QUERY_MS=100
MONGODB_LOG_LEVEL=error
MONGODB_PROFILER_ENABLED=false
MONGODB_PROFILER_LEVEL=1 